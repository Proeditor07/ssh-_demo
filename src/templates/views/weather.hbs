    <title>weather</title>
</head>
<body>
  {{>navbar}}
  
   <!-- Main header -->
   <div class="container-fluid main_header">
      <div class="row">
          <div class="col-md-10 col-12 mx-auto">
              <div class="main_content">
                  <form class="temp_form">
                      <input type="text" id="cityName" placeholder="Enter your city name" autocomplete="off">
                      <input type="submit" value="search" id="submitBtn">
                  </form>
              </div>
              <div class="tempInformation">
                  <div class="top_layer">
                      <p id="day">Day</p>
                      


                  </div>
                  <div class="main_layer">
                      <p id="city_name">
                          Get output here
                      </p>
                      <div class="middle_layer data_hid">
                          <p id="temp"><span>0</span></p>
                          <p id="temp2"><sup>0</sup>C</p>
                          <p id="temp_status"> <i class="fa-solid fa-cloud"></i></p>
                      </div>
                  </div>
              </div>

            
          </div>

            
       </div>

      
    </div>

    <!-- footer code  -->
